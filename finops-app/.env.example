# ===============================================
# FinOps Platform - Environment Variables
# ===============================================
# Copy this file to .env and fill in your values

# ===============================================
# DATABASE
# ===============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="postgresql://finops:finops_dev@localhost:5432/finops_platform"

# Prisma Accelerate connection string (optional for production)
PRISMA_ACCELERATE_URL=""

# ===============================================
# CLOUDFLARE
# ===============================================
# Cloudflare Account ID (find in Cloudflare dashboard)
CF_ACCOUNT_ID=""

# Cloudflare API Token (create with Workers permissions)
CF_API_TOKEN=""

# Workers KV Namespace IDs
KV_NAMESPACE_ID=""
KV_NAMESPACE_SESSIONS=""
KV_NAMESPACE_CACHE=""

# R2 Bucket Name
R2_BUCKET_NAME="finops-reports"

# D1 Database ID
D1_DATABASE_ID=""

# ===============================================
# AUTHENTICATION - OAUTH 2.0
# ===============================================
# Google OAuth (create at console.cloud.google.com)
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# Microsoft OAuth (create at portal.azure.com)
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID=""

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=""
JWT_ISSUER="https://finops-app.com"
JWT_AUDIENCE="finops-platform"

# ===============================================
# CLOUD PROVIDER APIs
# ===============================================
# AWS Credentials
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_DEFAULT_REGION="us-east-1"

# Azure Credentials
AZURE_CLIENT_ID=""
AZURE_CLIENT_SECRET=""
AZURE_TENANT_ID=""
AZURE_SUBSCRIPTION_ID=""

# GCP Service Account
GCP_PROJECT_ID=""
GCP_SERVICE_ACCOUNT_KEY=""

# ===============================================
# FINOPS CONFIGURATION
# ===============================================
# Allocation target percentage (default: 80)
ALLOCATION_TARGET=80

# Effective Savings Rate target (default: 0.15 = 15%)
ESR_TARGET=0.15

# Forecast variance target percentage (default: 15)
FORECAST_VARIANCE_TARGET=15

# Data refresh interval in hours (default: 4)
DATA_REFRESH_INTERVAL=4

# ===============================================
# INTEGRATIONS (Optional)
# ===============================================
# Slack
SLACK_WEBHOOK_URL=""
SLACK_BOT_TOKEN=""

# Microsoft Teams
TEAMS_WEBHOOK_URL=""

# Email (SendGrid, Mailgun, etc.)
EMAIL_PROVIDER="sendgrid"
EMAIL_API_KEY=""
EMAIL_FROM="noreply@finops-app.com"

# ===============================================
# PAYMENTS
# ===============================================
# Stripe
STRIPE_PUBLISHABLE_KEY=""
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""

# ===============================================
# MONITORING & OBSERVABILITY
# ===============================================
# Sentry
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# LogDNA / New Relic / Datadog
LOG_SERVICE=""
LOG_API_KEY=""

# ===============================================
# APPLICATION SETTINGS
# ===============================================
# Environment (development, staging, production)
NODE_ENV="development"

# API Base URL
VITE_API_URL="http://localhost:8787"

# Frontend URL
VITE_APP_URL="http://localhost:5173"

# Enable debug mode
DEBUG="false"

# Session timeout in hours (default: 24)
SESSION_TIMEOUT=24

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ===============================================
# FEATURE FLAGS (Optional)
# ===============================================
FEATURE_MULTI_CLOUD="true"
FEATURE_ANOMALY_DETECTION="true"
FEATURE_ML_RECOMMENDATIONS="false"
FEATURE_CHARGEBACK="false"
FEATURE_API_ACCESS="true"